@model RepositoryExample_15_02_22.Models.CategoriesModel

@{
    ViewBag.Title = "Update";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-1">
            @Html.LabelFor(x => x.Categories.CategoryID)
            @Html.EditorFor(x => x.Categories.CategoryID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(x => x.Categories.CategoryName)
            @Html.EditorFor(x => x.Categories.CategoryName, new { htmlAttributes = new { @class = "form-control " } })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(x => x.Categories.Description)
            @Html.TextAreaFor(x => x.Categories.Description, new { @class = "form-control", rows = 10 })
        </div>
        <div class="form-group">
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" /> &nbsp;&nbsp;
                @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}