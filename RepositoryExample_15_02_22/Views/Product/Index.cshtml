@model RepositoryExample_15_02_22.Models.ProductsModel

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div>
        <br />
        <form method="post" action="/Product/Index" class="d-inline-flex">
            <input type="search" name="name" placeholder="Arama..." class="form-control" />
            <button class="btn btn-success" type="submit">Ara</button>
        </form>
        <br />
        <hr />
        <a href="/Product/Ekle" class="btn btn-info float-right col-md-2 text-white">EKLE</a>
        <a href="/Product/Choose" class="btn btn-primary float-right col-md-2 text-white">Ürün Seç</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(x => x.Products.ProductID)</th>
                <th>@Html.DisplayNameFor(x => x.Products.ProductName)</th>
                <th>@Html.DisplayNameFor(x => x.Products.UnitPrice)</th>
                <th>@Html.DisplayNameFor(x => x.Products.QuantityPerUnit)</th>
                <th>@Html.DisplayNameFor(x=> x.Products.Categories.CategoryName)</th>
                <th>@Html.DisplayNameFor(x => x.Products.Discontinued)</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model.pList)
            {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.QuantityPerUnit</td>
                <td>@item.Categories.CategoryName</td>
                <td>@item.Discontinued</td>
                <td class="text-center"><a class="btn btn-info text-white" href="/Product/Detail/@item.ProductID">Detail</a></td>
                <td class="text-center"><a class="btn btn-warning" href="/Product/Update/@item.ProductID">Update</a></td>
                <td class="text-center"><a class="btn btn-danger text-white" href="/Product/Delete/@item.ProductID">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>

