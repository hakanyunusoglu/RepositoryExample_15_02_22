@model RepositoryExample_15_02_22.Models.ProductsModel

@{
    ViewBag.Title = "Update";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-1">
        @Html.LabelFor(x => x.Products.ProductID)
        @Html.EditorFor(x => x.Products.ProductID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    </div>
    <div class="form-group col-md-2">
        @Html.LabelFor(x => x.Products.ProductName)
        @Html.EditorFor(x => x.Products.ProductName, new { htmlAttributes = new { @class = "form-control " } })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(x => x.Products.UnitPrice)
        @Html.EditorFor(x => x.Products.UnitPrice, new { htmlAttributes = new { @class = "form-control " } })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(x => x.Products.QuantityPerUnit)
        @Html.EditorFor(x => x.Products.QuantityPerUnit, new { htmlAttributes = new { @class = "form-control " } })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(x => x.Products.Categories.CategoryName)
        @Html.DropDownListFor(x => x.Products.CategoryID, Model.CategoryList, "--- Kategori Seçiniz ---", new { @class = "form-control" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(x => x.Products.Discontinued)
        @Html.CheckBoxFor(x => x.Products.Discontinued, new { htmlAttributes = new { @class = "form-control " } })
    </div>
    <div class="form-group">
        <br />
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Güncelle" class="btn btn-success" /> &nbsp;&nbsp;
            @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
}